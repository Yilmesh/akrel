<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Nom"/></h1>
    </header>

    <section class="sheet-body">

        <table>
            <tr>
                <td>{{localize "AKREL.PASSIVE.LEVEL"}}</td>
                <td><input type="text" name="system.Level" value="{{system.Level}}"/></td>
                <td>{{localize "AKREL.SPELL.NATURE"}}</td>
                <td><input type="text" name="system.Nature" value="{{system.Nature}}"/></td>
            </tr>
        </table>
                <textarea name="system.description">{{system.description}}</textarea>
    </section>
</form>