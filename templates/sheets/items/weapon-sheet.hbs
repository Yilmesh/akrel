<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Nom"/></h1>
    </header>

    <section class="sheet-body">
        {{!-- infobulle d'en haut --}}
        <table>
            <tr>
                <td>{{localize "AKREL.WEAPON.TYPE"}}</td>
                <td><input name="data.weaponType" type="text" value="{{data.weaponType}}" data-dtype="String"/></td>
                <td>{{localize "AKREL.WEAPON.DURABILITY"}}</td>
                <td><input name="data.dura" type="text" value="{{data.dura}}" data-dtype="String"/></td>
                {{!-- lancer de dés --}}
                <div>
                    <button type="button" class="roll-damage" data-roll="{{data.damge}}">
                        <i class="fas fa-dice-d20"></i> Lancer un dés
                    </button>
                </div>
            </tr>
        </table>

        {{!-- Navigation --}}
        <nav class="sheet-tabs tabs" data-group="primary">
            <a class="item" data-tab="description">{{localize "AKREL.SHEET.DESCRIPTION_TAB"}}</a>
            <a class="item" data-tab="configuration">{{localize "AKREL.SHEET.CONFIGURATION_TAB"}}</a>
        </nav>

        {{!-- Contenu de l'onglet Description --}}
        <div class="tab description" data-group="primary" data-tab="description">
            {{localize "AKREL.ITEM.DESCRIPTION"}}
            <textarea name="data.description">{{data.description}}</textarea>
            <div>
                {{localize "AKREL.WEAPON.PRICE"}}
                <input name="data.price" type="text" value="{{data.price}}" data-dtype="Number"/>
            </div>
        </div>

        {{!-- Contenu de l'onglet Configuration --}}
        <div class="tab configuration" data-group="primary" data-tab="configuration">
            <table>
                 <tr>
                    <td>{{localize "AKREL.WEAPON.ATTACKWITH"}}</td>
                    <td><select name="data.attackAttribute">{{selectOptions config.attackTypes selected=data.attackAttribute localize=true}}</select></td>
                </tr>
                <tr>
                    <td>{{localize "AKREL.WEAPON.DAMAGE"}}</td>
                    <td><input name="data.damage" type="text" value="{{data.damage}}" data-dtype="String"/></td>
                </tr>
                <tr>
                    <td>{{localize "AKREL.WEAPON.NATURE"}}</td>
                    <td><input name="date.nature" type="text" value="{{data.nature}}" data-dtype="String"/></td>
                </tr>
                <tr>
                    <td>{{localize "AKREL.WEAPON.ENCHANTMENT"}}</td>
                    <td><input name="data.enchantment" type="text" value="{{data.enchantment}}" data-dtype="String"/></td>
                </tr>
            </table>
        </div>
    </section>
</form>
