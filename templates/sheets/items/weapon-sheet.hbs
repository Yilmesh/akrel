<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'Nom'}}" data-dtype="String"/></h1>
    </header>

    <section class="sheet-body">
        {{!-- Informations de base de l'arme --}}
        <div class="form-group-flex">
            <div class="form-group">
                <label>{{localize "AKREL.WEAPON.TYPE"}}</label>
                <input name="system.weaponType" type="text" value="{{system.weaponType}}" data-dtype="String"/>
            </div>
            <div class="form-group">
                <label>{{localize "AKREL.WEAPON.DURABILITY"}}</label>
                <input name="system.durability" type="text" value="{{system.durability}}" data-dtype="String"/>
            </div>
        </div>
        
        {{!-- Bouton de jet d'arme sur la fiche d'item --}}
        {{!-- Ce bouton déclenchera la même logique de dialogue de jet que depuis la feuille d'acteur --}}
        <div class="form-group-button">
            <button type="button" class="item-control" data-action="rollWeaponAttack">
                <i class="fas fa-dice-d20"></i> {{localize 'AKREL.ACTIONS.ROLL_ATTACK'}}
            </button>
        </div>

        {{!-- Navigation par onglets --}}
        <nav class="sheet-tabs tabs" data-group="primary">
            <a class="item" data-tab="description">{{localize "AKREL.SHEET.DESCRIPTION_TAB"}}</a>
            <a class="item" data-tab="configuration">{{localize "AKREL.SHEET.CONFIGURATION_TAB"}}</a>
        </nav>

        {{!-- Contenu de l'onglet Description --}}
        <div class="tab description" data-group="primary" data-tab="description">
            <div class="form-group stacked">
                <label>{{localize "AKREL.ITEM.DESCRIPTION"}}</label>
                <textarea name="system.description" data-dtype="String">{{system.description}}</textarea>
            </div>
            <div class="form-group">
                <label>{{localize "AKREL.WEAPON.PRICE"}}</label>
                <input name="system.price" type="number" value="{{system.price}}" data-dtype="Number"/>
            </div>
        </div>

        {{!-- Contenu de l'onglet Configuration --}}
        <div class="tab configuration" data-group="primary" data-tab="configuration">
            <div class="form-group">
                <label>{{localize "AKREL.WEAPON.ATTACKWITH"}}</label>
                <select name="system.attackAttribute" data-dtype="String">
                    {{selectOptions config.attackTypes selected=system.attackAttribute localize=true}}
                </select>
            </div>
            <div class="form-group">
                <label>{{localize "AKREL.WEAPON.DAMAGE"}}</label>
                <input name="system.dice" type="text" value="{{system.dice}}" data-dtype="String"/>
            </div>
            <div class="form-group">
                <label>{{localize "AKREL.WEAPON.NATURE"}}</label>
                <input name="system.nature" type="text" value="{{system.nature}}" data-dtype="String"/>
            </div>
            <div class="form-group">
                <label>{{localize "AKREL.WEAPON.ENCHANTMENT"}}</label>
                <input name="system.enchantment" type="text" value="{{system.enchantment}}" data-dtype="String"/>
            </div>
        </div>
    </section>
</form>