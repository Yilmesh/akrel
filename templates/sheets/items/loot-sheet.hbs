<form class="{{cssClass}}" autocomplete="off">
    <header class="loot-sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Nom"/></h1>
    </header>
    
    <section class="loot-sheet-body">
        <table>
            <tr>
                <td>{{localize "AKREL.LOOT.QUANTITY"}}</td>
                <td><input name="system.quantity" type="number" value="{{system.quantity}}"/></td>
                <td>{{localize "AKREL.LOOT.PRICE"}}</td>
                <td><input name="system.price" type="number" value="{{system.price}}"/></td>
            </tr>
        </table>
        {{localize "AKREL.ITEM.DESCRIPTION"}}
        <textarea name="system.description">{{system.description}}</textarea>
    </section>
</form>